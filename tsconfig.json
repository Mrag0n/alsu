{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".", // Set the base URL for relative paths to the root of the project
    "paths": {
      "@*": ["src/*"] // Map all modules starting with '@/' to the src directory
    }
  },
  "include": ["next-env.d.ts", "src/**/*"],
  "exclude": ["node_modules", ".next"]
}
